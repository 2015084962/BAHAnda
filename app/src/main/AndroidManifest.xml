<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cornell.diaz">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".safetytips_activity"
            android:label="@string/title_activity_safetytips_activity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".firstaid_activity"
            android:label="@string/title_activity_firstaid_activity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".map_activity"
            android:label="@string/title_activity_map_activity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>